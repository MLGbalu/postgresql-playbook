# BEST PRACTICE: Jinja2 template для pg_hba.conf
# Шаблонизация позволяет генерировать конфигурацию динамически
# Этот блок будет добавлен в pg_hba.conf для настройки репликации

# Локальная репликация
host replication repluser 127.0.0.1/32 md5

# Репликация с мастера
host replication repluser {{ postgres_master_ip }}/32 md5

# Репликация со слейва
host replication repluser {{ postgres_slave_ip }}/32 md5

# Доступ для приложений
host all postgres {{ postgres_connection_ip }}/32 md5
